        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2",
        "ts-jest": "^26.1.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
