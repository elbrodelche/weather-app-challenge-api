        "lint": "eslint '*/**/*.{ts,tsx}' --quiet --fix --ignore-path .gitignore",
        "prettier": "prettier --ignore-path .gitignore  \"**/*.+(ts|tsx|json)\"",
        "format": "npm run prettier -- --write",
        "check-format": "npm run prettier --list-different",
        "validate": "npm-run-all --parallel check-format lint test build"
    },
    "author": "Juan Carlos Migliavacca",
    "license": "ISC",
    "dependencies": {
