        "koa-static": "^5.0.0",
        "node-fetch": "^3.1.1"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/node-fetch": "^2.5.7",
        "@types/jest": "^26.0.4",
        "@types/supertest": "^2.0.10",
        "@types/koa": "^2.11.3",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-router": "^7.4.1",
        "@types/koa-static": "^4.0.1",
